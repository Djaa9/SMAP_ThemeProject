<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="djaa9.dk.thepage.smap_themeproject.IntroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walk_message"
        android:text="@string/intro_explanation"
        android:gravity="center"
        android:layout_marginBottom="49dp"
        android:layout_above="@+id/start_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Start gÃ¥tur  "
        android:id="@+id/start_button"
        android:background="#00BA3B"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" android:onClick="StartWalk"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Velkommen!"
        android:id="@+id/welcome_message"
        android:gravity="center"
        android:layout_above="@+id/walk_message"
        android:layout_alignRight="@+id/walk_message"
        android:layout_alignEnd="@+id/walk_message"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
